<h3 style="color: blue">Danh sách NXB</h3>
<hr>
<a data-toggle="modal" href="#myModal"class="btn btn-success" role="button">
	<span class="fa fa-plus"></span>
	Thêm mới
</a>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Tên NXB</th>
			<th class="td-actions"></th>
		</tr>
	</thead>
	<tbody>
		{{#each nxb}}
		<tr>
			<td id="id">{{Id}}</td>
			<td>{{TenNXB}}</td>
			<td class="text-right">
				<a href="javascript:;" class="btn btn-small btn-primary">
					<i class="fa fa-pencil"></i>
				</a>

				<a href="javascript:;" class="btn btn-small btn-danger">
					<i class="fa fa-trash"></i>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<div class="modal" id="myModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Thêm NXB mới</h4>
			</div>
			<div class="modal-body">
				<form action="" method="POST" role="form">
					<div class="form-group">
						<label for="">Tên NXB</label>
						<input type="text" class="form-control" id="" name= "ten" placeholder="Vui lòng nhập tên nhà xuất bản!">
					</div>
					<div class="modal-footer">
						<a href="#" data-dismiss="modal" class="btn btn-danger">Hủy</a>
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>