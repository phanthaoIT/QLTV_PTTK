<h3 style="color: blue">Danh sách NXB</h3>
<hr>
<a data-toggle="modal" href="#add"class="btn btn-success" role="button">
	<span class="fa fa-plus"></span>
	Thêm mới
</a>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Tên NXB</th>
			<th class="td-actions"></th>
		</tr>
	</thead>
	<tbody>
		{{#each nxb}}
		<tr>
			<td id="id">{{Id}}</td>
			<td>{{TenNXB}}</td>
			<td class="text-right">
				<a href="javascript:;" class="btn btn-small btn-primary" role="button">
					<i class="fa fa-pencil"></i>
				</a>

				<a data-toggle="modal" href="/NXB/delete?id={{Id}}" class="btn btn-small btn-danger" role="button">
					<i class="fa fa-trash"></i>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<div class="modal" id="add">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Thêm NXB mới</h4>
			</div>
			<div class="modal-body">
				<form action="list" role="form" method="POST">
					<div class="form-group">
						<label for="">Tên NXB</label>
						<input type="text" class="form-control" id="" name= "ten" placeholder="Vui lòng nhập tên nhà xuất bản!">
					</div>
					<div class="modal-footer form-group">
						<button data-dismiss="modal" class="btn btn-danger">Hủy</button>
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<div class="modal" id="delete">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Xóa</h4>
			</div>
			<div class="modal-body">
				<form action="list" role="form" method="POST">
					<div class="form-group">
						<input type="hidden" id="" name="Id" value="{{Id}}">
						<input type="hidden" class="form-control" id="" name= "ten" value={{TenNXB}}>
					</div>
					<div class="modal-footer form-group">
						<button data-dismiss="modal" class="btn btn-primary">Hủy</button>
						<button type="submit" class="btn btn-danger">Xóa</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>