<h3 style="color: blue">Danh sách Thể loại</h3>
<hr>
<a data-toggle="modal" href="#myModal"class="btn btn-success" role="button">
	<span class="fa fa-plus"></span>
	Thêm mới
</a>
<br>
<div class="span7">   
	<div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="widget-content">

			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>ID</th>
						<th>Tên thể loại</th>
						<th class="td-actions"></th>
					</tr>
				</thead>
				<tbody>
					{{#each theloai}}
					<tr>
						<td id="id">{{Id}}</td>
						<td>{{TenTheLoai}}</td>
						<td class="td-actions col-xs-2 col-sm-2 col-md-2 col-lg-2">
							<a href="javascript:;" class="btn btn-small btn-primary">
								<i class="fa fa-pencil"></i>
							</a>

							<a href="javascript:;" class="btn btn-small btn-danger">
								<i class="fa fa-remove"></i>
							</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>

		</div> <!-- /widget-content -->

	</div> <!-- /widget -->
</div>
<div class="modal" id="myModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Thêm Thể loại mới</h4>
			</div>
			<div class="modal-body">
				<form action="" role="form" method="POST">
					<div class="form-group">
						<label for="">Tên Thể Loại</label>
						<input type="text" class="form-control" id="" name= "ten" placeholder="Vui lòng nhập tên thể loại!" required="">
					</div>
					<div class="modal-footer form-group">
						<button data-dismiss="modal" class="btn btn-danger">Hủy</button>
						<button type="submit" class="btn btn-primary" >Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>